
<div class="row">
	<div class="large-4 columns">
		<h3>My registered vehicles</h3>
		<ul class="side-nav" role="navigation" title="Véhicules enregistrés">
		  	{{#each vehicle in model}}
		  	<li role="menuitem"><a href="#">{{vehicle.name}} --> {{vehicle.brand}} {{vehicle.model}} </a>
		  	</li>  	
		  	{{/each}}
		  	<button {{action "createNewVehicle"}}>Nouveau véhicule</button>
		</ul>		
	</div>
	<div class="large-8 columns">
		  <form class="panel">
		    <h3>New vehicle</h3>
			    <div class="row">
			    	<div class="large-12 columns">
			    		<label>Vehicle nickname
		    				{{view 'autosave-text-field' valueBinding='name' type="text" placeholder="Enter the nickname of your vehicle"}}
			    		</label>
			    	</div>
			    </div>
			    <div class="row">
			    	<div class="large-12 columns">
			    		<label>Car, motorcycle or bike
		    				{{view 'autosave-text-field' typeBinding='type' type="text" placeholder="Choose the kind of vehicle"}}
			    		</label>
			    	</div>
			    </div>

			    <div class="row">
			    	<div class="large-6 columns">
			    		<label>Brand
		    				{{view 'autosave-text-field' brandBinding='brand' placeholder="Brand"}}
			    		</label>
			    	</div>
			    	<div class="large-6 columns">
			    		<label>Car model
		    				{{view 'autosave-text-field' modelBinding='model' placeholder="Enter the model of your vehicle"}}
			    		</label>
			    	</div>
			    </div>
		  </form>
	

	</div>
</div>

