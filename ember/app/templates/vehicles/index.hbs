

<div class="row">
  <div class="large-4 columns">
    <h3>My registered vehicles</h3>
    <ul class="side-nav" role="navigation" title="Véhicules enregistrés">
        {{#each vehicle in controller}}
        <li role="menuitem">
          <a>
            {{#link-to 'vehicles.show' vehicle}} 
              {{vehicle.name}} 
            {{/link-to}}
          </a>
        </li>   
        {{/each}}
        <button {{action "createNewVehicle"}}>Nouveau véhicule</button>
    </ul>
  
  </div>
  <div class="large-8 columns">
    {{outlet}}
      <form class="panel">
        <h3>New vehicle</h3>
          <div class="row">
            <div class="large-12 columns">
              <label>Vehicle nickname
                {{view 'autosave-text-field' valueBinding='name' type="text" placeholder="Enter the nickname of your vehicle"}}
              </label>
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <label>Type
                <select>
                  <option>{{view 'autosave-text-field' valueBinding='kind' text="car"}}</option>
                  <option value="Motorbike">Motorbike</option>
                  <option value="Bike">Bike</option>
                </select>
              </label>
            </div>
          </div>

          <div class="row">
            <div class="large-6 columns">
              <label>Brand
                {{view 'autosave-text-field' valueBinding='brand' placeholder="Brand"}}
              </label>
            </div>
            <div class="large-6 columns">
              <label>Car model
                {{view 'autosave-text-field' valueBinding='car_model' placeholder="Enter the model of your vehicle"}}
              </label>
            </div>
          </div>

          <button {{action "createNewVehicle"}}>Confirm</button>
          <p>{{error}}</p>
      </form>
  </div>
</div>

